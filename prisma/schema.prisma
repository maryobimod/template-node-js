datasource db {
  provider = "sqlserver"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Makanan {
  id          Int       @id @default(autoincrement())
  nama        String    @db.NVarChar(100)             
  deskripsi   String?   @db.NVarChar(1000)            
  harga       Decimal   @db.Decimal(10, 2)            
  stok        Int
  created_at  DateTime
  updated_at  DateTime

  @@map("makanan")
}

model User {
  id          Int       @id @default(autoincrement())
  username    String    @db.NVarChar(255) @unique
  password    String    @db.NVarChar(255)
  created_at  DateTime
  updated_at  DateTime

  @@map("users_node")
}